#ifndef ITG3200_H_
#define ITG3200_H_

#define WHO_AM_I_REG 0x0
#define SAMPLE_RATE_DIV_REG 0x15
#define DLPF_FULL_SCALE_REG 0x16
#define INTERRUPTS_CFG_REG 0x17

#define SAMPLE_RATE_DIV_VALUE 0
#define DLPF_FULL_SCALE_VALUE (FS_SEL << 3 | DLPF_CFG)
#define INTERRUPTS_CFG_VALUE ()

#define INTERRUPTS_CFG_ACTL    (0x0 << 7)
#define INTERRUPTS_CFG_OPEN    (0x0 << 6)
#define INTERRUPTS_CFG_LATCH   (0x1 << 5)
#define INTERRUPTS_CFG_ANYRD   (0x1 << 4)
#define INTERRUPTS_CFG_ITG_RDY (0x1 << 2)
#define INTERRUPTS_CFG_RAW_RDY  0x1

#define FS_SEL 0x3
#define DLPF_CFG 0x0




int ITG3200_read_accdata(char addr, float* Xacc, float* Yacc, float* Zacc);
int init_ITG3200(char addr);

#endif /* ITG3200_H_ */
